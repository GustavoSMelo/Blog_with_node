<h1 class="text-center">Login</h1>
<br/>
<section class="row">
    <section class="card m-auto">
        <section class="card-body">
            <form method="POST" action="/usuarios/login">
                <label>Email: </label>
                <input type="email" placeholder="ex: email@email.com" class="form-control" name="email" required="required"/>
                <br/>
                
                <label>Senha: </label>
                <input type="password" placeholder="sua senha... " class="form-control" name="senha" required="required"/>
                <br/>
                <button type="submit" class="btn btn-outline-success">Logar! </button>
            </form>
        </section>
    </section>
</section>